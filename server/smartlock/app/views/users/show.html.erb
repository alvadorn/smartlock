<p id="notice"><%= notice %></p>

<p>
  <strong>Nome:</strong>
  <%= @user.name %>
  <% if @user.bluetooth_adapter.count > 0 %>
  <table>
    <thead>
      <tr>
        <th>
          Token
        </th>
        <th>
          Ativado
        </th>
        <th colspan="3">
          Detalhes
        </th>
      </thead>
    </tr>
    <tbody>
      <tr>
      <% @user.bluetooth_adapter.each do |adapter| %>
        <td>
          <%= adapter.token %>
        </td>
        <td>
          <% if adapter.activated %>
            Ativado
          <% else %>
            Desativado
          <% end %>
        </td>
        <td>

        </td>
        <% end %>
      </tr>
    </tbody>
  </table>
  <% end %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>

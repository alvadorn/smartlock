<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>
        Sobrenome
      </th>
      <th>
        Email
      </th>
      <th>
        Matricula
      </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.surname %></td>
        <td><%= user.email %></td>
        <td><%= user.account %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td>
        <% if user.activated %>
          <%= link_to 'Desativar', user_deactivate_path(user), method: :put, data: { confirm: 'Você tem certeza?' } %>
        <% else %>
          <%= link_to 'Ativar', user_activate_path(user), method: :put, data: { confirm: 'Você tem certeza?' } %>
        <% end %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
